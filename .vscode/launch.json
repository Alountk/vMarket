{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            // "preLaunchTask": "Docker Up",
            "program": "${workspaceFolder}/Videogames.API/bin/Debug/net10.0/Videogames.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Videogames.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "https://localhost:7079;http://localhost:5017"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
